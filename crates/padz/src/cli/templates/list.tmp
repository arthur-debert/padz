{%- if empty -%}
{{- "No pads yet, create one with `padz create`" | style("info") | nl -}}
{{ help_text }}
{%- else -%}
{%- for pad in pads -%}
{%- if pad.is_separator -%}
{{- "" | nl -}}
{%- else -%}
{%- include "_pad_line" -%}
{%- include "_match_lines" -%}
{%- if pad.peek -%}
{%- include "_peek_content" -%}
{%- endif -%}
{%- endif -%}
{%- endfor -%}
{%- endif -%}
{%- if deleted_help -%}
{%- include "_deleted_help" -%}
{%- endif -%}
